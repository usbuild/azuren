@using AzurenRole.Utils
@model AzurenRole.Models.SettingForm
@{
    Layout = null;
    ViewBag.Title = "Settings";
}
<div class="chat-settings">

    <h2>Settings</h2>
    <input type="hidden" class="displayname" value="@GlobalData.user.displayname"/>
<div class="alert alert-info">Leave it blank if you don't want to change. </div>
@using(Html.BeginForm())  {
        <fieldset>
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert error-msg">
            @Html.ValidationSummary("Please fix following errors:")
            </div>
        }
        <legend>Change Display Name</legend>
            <div class="form-group">
                    @Html.LabelFor(m => m.DisplayName)
                    @Html.TextBoxFor(m => m.DisplayName, new { @class = "form-control" })
            </div>
            <legend>Change Password</legend>
            <div class="form-group">
                    @Html.LabelFor(m => m.OldPassword)
                    @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control" })
            </div>
            <div class="form-group">
                    @Html.LabelFor(m => m.NewPassword)
                    @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
            </div>

            <div class="form-group">
                    @Html.LabelFor(m => m.ConfirmPassword)
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            </div>

            <input type="submit" class="btn btn-primary signup-btn" value="save" />
        </fieldset>
}

</div>
